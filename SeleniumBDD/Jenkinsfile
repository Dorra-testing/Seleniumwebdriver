pipeline {
    agent any

    environment {
        MAVEN_HOME = tool 'Maven3'   // Nom Maven configuré dans Jenkins
        JAVA_HOME  = tool 'JDK8'     // Nom JDK configuré dans Jenkins
        PATH      = "${JAVA_HOME}\\bin;${MAVEN_HOME}\\bin;%PATH%"
    }

    stages {

        stage('Checkout') {
            steps {
                echo 'Récupération du code depuis GitHub'
                git branch: 'main',
                    url: 'https://github.com/Dorra-testing/Seleniumwebdriver.git'
            }
        }

        stage('Build & Test') {
            steps {
                echo 'Compilation et exécution des tests Selenium + Cucumber'
                bat "\"${MAVEN_HOME}\\bin\\mvn\" clean test"
            }
        }

        stage('Archive Reports & Screenshots') {
            steps {
                echo 'Archivage des rapports et screenshots'
                // Archiver ExtentReports
                archiveArtifacts artifacts: 'SeleniumBDD/target/ExtentReports/*.html', fingerprint: true
                // Archiver screenshots
                archiveArtifacts artifacts: 'SeleniumBDD/screenshots/**/*.png', fingerprint: true
                // Archiver Cucumber JSON si présent
                archiveArtifacts artifacts: 'SeleniumBDD/test-output/cucumber/*.json', fingerprint: true
            }
        }

        stage('Publish HTML Reports') {
            steps {
                echo 'Publication des rapports HTML'
                publishHTML([
                    reportDir: 'SeleniumBDD/target/ExtentReports',
                    reportFiles: 'report.html',
                    reportName: 'Extent Report',
                    keepAll: true,
                    alwaysLinkToLastBuild: true,
                    allowMissing: true
                ])
            }
        }
    }

    post {
        always {
            echo 'Pipeline terminé'
        }
    }
}
