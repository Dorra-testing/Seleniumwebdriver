pipeline {
    agent any

    stages {

        stage('Checkout') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/Dorra-testing/Seleniumwebdriver.git'
            }
        }

        stage('Build & Test') {
            steps {
                dir('SeleniumBDD') {
                    sh 'mvn clean test'
                }
            }
        }

    }

    post {
        always {
            archiveArtifacts artifacts: 'SeleniumBDD/target/**/*.html', fingerprint: true
        }
    }
}
